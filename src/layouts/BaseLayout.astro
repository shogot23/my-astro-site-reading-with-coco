---
const { title = '読書ログ with Coco' } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <style>
      :root {
        --bg: #f8f7f3;
        --card: #ffffff;
        --text: #1f2937;
        --muted: #6b7280;
        --line: #e5e7eb;
        --accent: #4f46e5;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: 'Noto Sans JP', system-ui, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.7;
      }
      a { color: inherit; text-decoration: none; }
      .container { width: min(1080px, 92vw); margin: 0 auto; }
      header { padding: 1.5rem 0; border-bottom: 1px solid var(--line); background: #fffdf7; }
      nav { display: flex; flex-wrap: wrap; gap: 1rem; align-items: center; justify-content: space-between; }
      .logo { font-size: 1.2rem; font-weight: 700; }
      .links { display: flex; gap: 1rem; color: var(--muted); font-size: .95rem; }
      main { padding: 2.5rem 0 4rem; }
      h1, h2, h3 { line-height: 1.25; margin-top: 0; }
      .grid { display: grid; gap: 1.25rem; }
      .cards-3 { grid-template-columns: repeat(auto-fill, minmax(240px, 1fr)); }
      .card {
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.04);
      }
      .card-body { padding: 1rem; }
      .meta { color: var(--muted); font-size: .9rem; }
      .thumb {
        width: 100%;
        aspect-ratio: 4 / 3;
        object-fit: cover;
        display: block;
        background: #f3f4f6;
      }
      .controls { display: flex; flex-wrap: wrap; gap: .75rem; margin-bottom: 1.2rem; }
      input, select {
        border: 1px solid var(--line);
        border-radius: 10px;
        padding: .6rem .75rem;
        background: white;
      }
      .pill { display: inline-block; border-radius: 999px; background: #eef2ff; color: #3730a3; padding: .15rem .65rem; font-size: .8rem; }
      footer { padding: 2rem 0; border-top: 1px solid var(--line); color: var(--muted); font-size: .9rem; }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <nav>
          <a class="logo" href="/">読書ログ with Coco</a>
          <div class="links">
            <a href="/books">本</a>
            <a href="/photos">写真</a>
            <a href="/videos">動画</a>
          </div>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <footer>
      <div class="container">Astro + Content Collections で静的生成</div>
    </footer>
  </body>
</html>
